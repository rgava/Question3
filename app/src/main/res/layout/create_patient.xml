<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_scroll1"
        >


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:id="@+id/txtstart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Frontline SMS Number"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"

                />
            <EditText
                android:id="@+id/txtPhoneNo"
                android:layout_width="fill_parent"
                android:layout_height="45px"
                android:maxLength="10"
                android:inputType="number"
                android:text="0775713153"
                android:layout_below="@+id/txtstart"

                android:layout_marginBottom="15px"

                />


            <TextView
                android:id="@+id/textviewphoneno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPhoneNo"
                android:text="PSI Client ID"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"

                />

            <EditText
                android:id="@+id/txtNovoId"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:gravity="top"
                android:maxLength="13"
                android:inputType="textCapCharacters"
                android:layout_below="@+id/textviewphoneno"

                android:layout_marginBottom="15px"
                />


            <TextView
                android:id="@+id/textviewphoneno2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Client ID"
                android:layout_below="@+id/txtNovoId"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"

                />

            <EditText
                android:id="@+id/txtNovoId2"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:gravity="top"
                android:maxLength="13"
                android:inputType="textCapCharacters"
                android:layout_below="@+id/textviewphoneno2"

                android:layout_marginBottom="15px"
                />


            <TextView
                android:id="@+id/txtName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:layout_below="@+id/txtNovoId2"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtClientName"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:text=""
                android:inputType="textCapCharacters"
                android:layout_below="@+id/txtName"

                android:layout_marginBottom="15px"
                />


            <TextView
                android:id="@+id/txtSurname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Client Surname"
                android:layout_below="@+id/txtClientName"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtClientSurname"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:text=""
                android:inputType="textCapCharacters"
                android:layout_below="@+id/txtSurname"

                android:layout_marginBottom="15px"
                />




            <TextView
                android:id="@+id/textGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@+id/txtClientSurname"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                />


            <Spinner
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:entries="@array/gender"
                android:layout_below="@+id/textGender"

                android:layout_marginBottom="15px"
                />



            <TextView
                android:id="@+id/txtrecipientnumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtGender"
                android:text="Client Cell Number"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtrecipientnumbera"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtrecipientnumber"
                android:text="Enter 1 if client has no cell"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <EditText
                android:id="@+id/txtrecipientPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:maxLength="10"
                android:inputType="number"
                android:text=""
                android:layout_below="@+id/txtrecipientnumbera"

                android:layout_marginBottom="15px"
                />




            <TextView
                android:id="@+id/txtconfirmrecipientnumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtrecipientPhoneNo"
                android:text="Confirm Client Cell Number"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/txtconfirmrecipientPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:maxLength="10"
                android:inputType="number"
                android:text=""
                android:layout_below="@+id/txtconfirmrecipientnumber"

                android:layout_marginBottom="15px"
                />





            <TextView
                android:id="@+id/txtpartnernumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtconfirmrecipientPhoneNo"
                android:text="Partner Cell Number"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtrecipientnumberb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtpartnernumber"
                android:text="Enter 1 if partner has no cell"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/txtrecipientnumberc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtrecipientnumberb"
                android:text="Enter 9 if client has no partner"
                android:textColor="@color/black"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/txtpartnerPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:maxLength="10"
                android:inputType="number"
                android:text=""
                android:layout_below="@+id/txtrecipientnumberc"

                android:layout_marginBottom="15px"
                />




            <TextView
                android:id="@+id/textviewchosendate2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date of referral"
                android:layout_below="@+id/txtpartnerPhoneNo"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/txtAppointmentDate2"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:gravity="top"
                android:layout_below="@+id/textviewchosendate2"

                android:layout_marginBottom="15px"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />



            <TextView
                android:id="@+id/textviewchosendate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Chosen date of appointment"
                android:layout_below="@+id/txtAppointmentDate2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/txtAppointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:gravity="top"
                android:layout_below="@+id/textviewchosendate"

                android:layout_marginBottom="15px"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />



            <TextView
                android:id="@+id/textviewreferral"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Service Being Referred To"
                android:layout_below="@+id/txtAppointmentDate"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                />


            <Spinner
                android:id="@+id/txtReferral"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:entries="@array/referral"
                android:layout_below="@+id/textviewreferral"

                android:layout_marginBottom="15px"
                />

            <TextView
                android:id="@+id/txtreferralinstitution"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtReferral"
                android:text="Health Facility Name"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtrefin"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:text=""
                android:inputType="textCapCharacters"
                android:layout_below="@+id/txtreferralinstitution"

                android:layout_marginBottom="15px"
                />



            <TextView
                android:id="@+id/intervention"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Intervention"
                android:layout_below="@+id/txtrefin"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                />


            <Spinner
                android:id="@+id/interventionspinner"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:entries="@array/intervention"
                android:layout_below="@+id/intervention"

                android:layout_marginBottom="15px"
                />


            <Button
                android:id="@+id/btnSendSMS"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Send"
                android:layout_below="@+id/interventionspinner"
                />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>